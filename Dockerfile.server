# Fase 1: Build
FROM node:20-alpine AS build
WORKDIR /app
COPY server/package*.json ./
RUN npm ci
COPY server ./
RUN npm run build

# Fase 2: Produzione (Immagine leggera)
FROM node:20-alpine
WORKDIR /app

# Copia solo le dipendenze di produzione
COPY --from=build /app/package*.json ./
RUN npm ci --omit=dev

# Copia il codice compilato
COPY --from=build /app/dist ./dist

ENV NODE_ENV=production
ENV PORT=3001

EXPOSE 3001

CMD ["npm", "start"]
