# ===== Core server config =====
PORT=3000

# SQLite path (current setup uses exchange.db in project root)
SQLITE_DB_PATH=./exchange.db

# ===== Security / auth =====
# How many most-recent passwords to remember (for passwordHistory.ts helpers)
PASSWORD_HISTORY_DEPTH=5

# Rate limiting (to be implemented in middleware)
RATE_LIMIT_LOGIN_PER_MINUTE=10
RATE_LIMIT_PASSWORD_RESET_PER_HOUR=20

# Secret key(s) for signing tokens / CSRF / etc. (not yet wired)
APP_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING

# ===== Email provider (for verification, password reset, login alerts) =====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="BitChange Exchange <no-reply@bitchange.money>"

# ===== SMS provider (used by src/sms.ts helper) =====
# Example config for Twilio-like provider
SMS_PROVIDER=twilio
SMS_FROM=+10000000000
SMS_ACCOUNT_SID=your_twilio_sid
SMS_AUTH_TOKEN=your_twilio_auth_token

# ===== KYC / assets storage =====
# Where you will store KYC images (S3 / Spaces / etc.)
KYC_STORAGE_BASE_URL=https://your-cdn-or-bucket.example.com/kyc
