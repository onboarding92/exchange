datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  role      String   @default("user")
  kycStatus String   @default("unverified")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relazioni
  sessions     Session[]
  kycRequests  KycRequest[]
  withdrawals  Withdrawal[]
  deposits     Deposit[]
  tickets      SupportTicket[]
  activities   ActivityLog[]
  loginHistory LoginHistory[]
  stakes       Stake[]
  trades       Trade[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model KycRequest {
  id              Int       @id @default(autoincrement())
  userId          Int
  status          String    @default("pending") // pending | approved | rejected
  rejectionReason String?
  documentType    String? // passport, id_card, driver_license
  documentFront   String? // path/url
  documentBack    String? // path/url
  createdAt       DateTime  @default(now())
  reviewedAt      DateTime?
  reviewerId      Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Coin {
  id          Int     @id @default(autoincrement())
  asset       String  @unique // es: BTC
  name        String
  enabled     Boolean @default(true)
  minWithdraw Float   @default(0.0)
  withdrawFee Float   @default(0.0)
}

model Deposit {
  id              Int      @id @default(autoincrement())
  userId          Int
  asset           String
  amount          Float
  status          String   @default("pending") // pending | completed | failed
  txHash          String? // on-chain tx id
  provider        String? // moonpay, changelly, etc
  providerOrderId String?
  providerTxHash  String?
  providerRaw     String?
  createdAt       DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Withdrawal {
  id         Int       @id @default(autoincrement())
  userId     Int
  asset      String
  amount     Float
  address    String
  status     String    @default("pending") // pending | approved | rejected
  createdAt  DateTime  @default(now())
  reviewedAt DateTime?
  reviewedBy Int?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id           Int      @id @default(autoincrement())
  userId       Int?
  type         String // es: login, withdrawal_request, withdrawal_status_update, kyc_status_update
  category     String // es: security, wallet, promo
  description  String
  metadataJson String?
  ip           String?
  userAgent    String?
  createdAt    DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

model LoginHistory {
  id        Int      @id @default(autoincrement())
  userId    Int
  ip        String?
  userAgent String?
  success   Boolean  @default(true)
  location  String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model SupportTicket {
  id        Int      @id @default(autoincrement())
  userId    Int
  subject   String
  message   String
  status    String   @default("open") // open | in_progress | resolved | closed
  priority  String   @default("normal") // low | normal | high | urgent
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PromoCode {
  id         Int       @id @default(autoincrement())
  code       String    @unique
  type       String // es: welcome_bonus, random_bonus, gift
  amount     Float?
  percentage Float?
  maxUses    Int?
  usedCount  Int       @default(0)
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())
}

model StakingPlan {
  id        Int      @id @default(autoincrement())
  name      String
  asset     String
  apr       Float
  lockDays  Int? // null = flexible
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  stakes Stake[]
}

model Stake {
  id           Int       @id @default(autoincrement())
  userId       Int
  planId       Int
  amount       Float
  startedAt    DateTime  @default(now())
  endsAt       DateTime?
  autoCompound Boolean   @default(false)
  status       String    @default("active") // active | completed | cancelled

  user User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan StakingPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
}

model Trade {
  id        Int      @id @default(autoincrement())
  userId    Int
  pair      String // es: BTC/USDT
  side      String // buy | sell
  price     Float
  amount    Float
  fee       Float    @default(0.0)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
