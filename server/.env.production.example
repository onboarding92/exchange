# ==== SERVER PRODUCTION ENV EXAMPLE ====
# Copy this file to .env.production (or .env) and fill the secrets.

# Basic app config
NODE_ENV=production
PORT=3000

# Database (current project uses SQLite file "exchange.db" in server folder)
# For a real production DB you would switch to Postgres/MySQL and update db.ts accordingly.
DB_FILE=exchange.db

# Security
JWT_SECRET=change_me_super_secret_jwt_key
PASSWORD_RESET_TOKEN_SECRET=change_me_password_reset_secret
SESSION_TOKEN_SECRET=change_me_session_secret

# Rate limiting (if/when implemented)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Mailer
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
MAIL_FROM="Bitchange Exchange <no-reply@bitchange.money>"

# Login alerts (these use the same SMTP config)
LOGIN_ALERT_ENABLED=true

# KYC (if you connect to a real provider later)
#KYC_PROVIDER_API_KEY=
#KYC_PROVIDER_ENDPOINT=

# Optional: SMS gateway (if/when sms.ts is wired)
#SMS_API_KEY=
#SMS_API_SENDER_ID=
