# ===============================
# BitChange Exchange - ENV EXAMPLE
# ===============================
# Copy this file to `.env` and fill values for your environment.
# DO NOT COMMIT YOUR REAL SECRETS.

# -------- Core Server --------
NODE_ENV=development
PORT=4000

# SQLite / Database
DB_PATH=./data/exchange.db

# JWT / Auth
JWT_SECRET=change_me_to_a_long_random_string_min_32_chars
JWT_EXPIRES_IN=7d

# CORS / Frontend
CLIENT_URL=http://localhost:5173

# -------- Rate limiting --------
RATE_LIMIT_LOGIN_MAX=10
RATE_LIMIT_LOGIN_WINDOW_MS=600000

# -------- SMTP / Email (optional but recommended) --------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="BitChange <no-reply@bitchange.money>"
SMTP_SECURE=false

# -------- 2FA / TOTP (if used) --------
TOTP_WINDOW=1

# -------- Payment gateways (placeholders for future real integration) --------
# These are placeholders. They are NOT required for local dev,
# but you can fill them when integrating real providers.

MOONPAY_API_KEY=your_moonpay_api_key
MOONPAY_API_SECRET=your_moonpay_api_secret

TRANSAK_API_KEY=your_transak_api_key
MERCURYO_API_KEY=your_mercuryo_api_key
BANXA_API_KEY=your_banxa_api_key
COINGATE_API_KEY=your_coingate_api_key
CHANGELLY_API_KEY=your_changelly_api_key

# -------- Misc / Logging --------
LOG_LEVEL=info

# ========================
# SMTP CONFIG (ESEMPIO MAILTRAP)
# ========================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=INSERISCI_IL_TUO_USER
SMTP_PASS=INSERISCI_LA_TUA_PASSWORD
SMTP_FROM="BitChange <no-reply@bitchange.money>"

# Indirizzo email dove inviare le email di test
TEST_EMAIL_TO=la-tua-email@esempio.com
